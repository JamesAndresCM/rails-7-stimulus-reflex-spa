<div class="row my-3" id="<%= dom_id(list) %>" data-reflex-root="#<%= dom_id(list) %>">
      <div class="col">
        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <%= list.name %>
            <%= link_to "Delete", list_path(list), method: :delete, class: 'text-danger', remote: true, data: { confirm: "Are you sure you want to delete #{list.name}?" } %>
          </div>
          <div class="card-body p-0">
            <div class="list-group list-group-flush" data-controller="list" data-list-target="tasks">
              <% if list.tasks.any? %>
                <%= render list.tasks  %>
              <% else %>
                <h5 class="p-4 mb-0">No tasks</h5>
              <% end %>
            </div>
        </div>
          <div class="card-footer">
              <%= bootstrap_form_with model: @new_task, id: "task-form-for-list-#{list.id}", url: '', layout: :inline, data: { controller: 'list', reflex: "submit->List#create_task", list_id: list.id, list_target: "form" } do |form| %>
              <%= form.text_field :name, skip_label: true, wrapper_class: "flex-fill", class: "w-100", placeholder: "Whats need to be done." %>
              <%= form.submit "Add Task" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

